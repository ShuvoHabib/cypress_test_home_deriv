{
  "name": "clawd-automation",
  "version": "1.0.0",
  "description": "Frontend and DevOps automation for Deriv projects",
  "scripts": {
    "test": "npm run test:cypress:headless",
    "test:cypress": "cypress open",
    "test:cypress:headless": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:signup": "cypress run --spec cypress/e2e/signup.cy.js",
    "test:signup:open": "cypress open --spec cypress/e2e/signup.cy.js",
    "test:login": "cypress run --spec cypress/e2e/login.cy.js",
    "test:login:open": "cypress open --spec cypress/e2e/login.cy.js",
    "test:password": "cypress run --spec cypress/e2e/password-reset.cy.js",
    "test:password:open": "cypress open --spec cypress/e2e/password-reset.cy.js",
    "test:performance": "cypress run --spec cypress/e2e/performance.cy.js",
    "test:performance:open": "cypress open --spec cypress/e2e/performance.cy.js",
    "test:a11y": "cypress run --spec cypress/e2e/accessibility.cy.js",
    "test:a11y:open": "cypress open --spec cypress/e2e/accessibility.cy.js",
    "test:report": "cypress run --spec 'cypress/e2e/**/*.cy.js' --reporter html",
    "lint": "echo 'No linter configured yet'",
    "format": "echo 'No formatter configured yet'"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "dotenv": "^17.2.3",
    "playwright": "^1.58.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
