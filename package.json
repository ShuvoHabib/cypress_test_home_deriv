{
  "name": "clawd-automation",
  "version": "1.0.0",
  "description": "Frontend and DevOps automation for Deriv projects",
  "scripts": {
    "test": "npm run test:cypress:headless",
    "test:cypress": "cypress open",
    "test:cypress:headless": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:signup": "cypress run --spec cypress/e2e/signup.cy.js",
    "test:signup:open": "cypress open --spec cypress/e2e/signup.cy.js",
    "test:report": "cypress run --spec 'cypress/e2e/**/*.cy.js' --reporter html && open cypress/reports/index.html",
    "lint": "echo 'No linter configured yet'",
    "format": "echo 'No formatter configured yet'"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "dotenv": "^17.2.3",
    "playwright": "^1.58.0"
  }
}
